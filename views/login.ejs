<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body text-center">
            <%- include ('./partielles/messages') %>
            <h1><h1><i class="fas fa-sign-in-alt"></i> Login</h1>
            <form action="/userLogin" method="post">
                <div class="form-group">
                    <label for="email">Courriel</label>
                    <input type="email" name="email" id="email" class="form-control" placeholder="Entrez courriel">
                </div>
                <div class="form-group">
                    <label for="password">Mot de Passe</label>
                    <input type="password" name="password" id="password" class="form-control" placeholder="Entrez mot de passe">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Login</button>
            </form>
            <h2></h2>
        </div>
    </div>
</div>